import React from 'react';
import PropTypes from 'prop-types';
import './WeatherItem.css';
import weatherIcon from '../../images/weather.png';
const WeatherItem = ({ title, temp }) => {
    WeatherItem.propTypes = {
        title: PropTypes.string.isRequired,
        temp: PropTypes.string
    };
    return (
        <div className="weather-container" data-testid="weatheritem">
            <div className="weather-item">
                <img className="weather-icon" src={weatherIcon} alt="weather" />
                <h1 className="weather-title">{title}</h1>
                <p className="weather-temp">Temperature: {temp}</p>
            </div>
        </div>
    );
};
export default WeatherItem;









